<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvTitleLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Název úkolu"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/etTaskTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Zadejte název"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tvTitleLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvDescLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Popis"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etTaskTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etTaskDescription"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:hint="Zadejte popis"
            android:inputType="textMultiLine"
            android:gravity="top"
            app:layout_constraintTop_toBottomOf="@id/tvDescLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvCategoryLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Kategorie"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etTaskDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/rgCategory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvCategoryLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbPersonal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Osobní"/>

            <RadioButton
                android:id="@+id/rbWork"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Práce"/>

            <RadioButton
                android:id="@+id/rbSchool"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Škola"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tvPriorityLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Priorita"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/rgCategory"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <RadioGroup
            android:id="@+id/rgPriority"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/tvPriorityLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbLowPriority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Nízká"/>

            <RadioButton
                android:id="@+id/rbMediumPriority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Střední"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/rbHighPriority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Vysoká"/>

        </RadioGroup>

        <TextView
            android:id="@+id/tvDeadlineLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Termín (YYYY-MM-DD)"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/rgPriority"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/etDeadline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="2024-12-31"
            android:inputType="date"
            app:layout_constraintTop_toBottomOf="@id/tvDeadlineLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tvImageLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Příloha (volitelné)"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/etDeadline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/ivTaskImage"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@id/tvImageLabel"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnPickImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vybrat obrázek"
            app:layout_constraintTop_toBottomOf="@id/tvImageLabel"
            app:layout_constraintStart_toEndOf="@id/ivTaskImage"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/btnSaveTask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ULOŽIT ÚKOL"
            android:backgroundTint="#4CAF50"
            app:layout_constraintTop_toBottomOf="@id/ivTaskImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>