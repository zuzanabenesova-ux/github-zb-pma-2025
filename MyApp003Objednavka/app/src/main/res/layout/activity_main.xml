<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Otázka -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jaké kolo si chceš objednat?"
        android:textSize="18sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <!-- RadioGroup pro výběr modelu -->
    <RadioGroup
        android:id="@+id/rgBikeModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <RadioButton
            android:id="@+id/rbM10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OIZ M10"
            android:textSize="16sp"
            android:layout_marginEnd="20dp"
            android:checked="true" />

        <RadioButton
            android:id="@+id/rbM20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OIZ M20"
            android:textSize="16sp"
            android:layout_marginEnd="20dp" />

        <RadioButton
            android:id="@+id/rbM30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OIZ M30"
            android:textSize="16sp" />
    </RadioGroup>

    <!-- CheckBoxy -->
    <CheckBox
        android:id="@+id/cbBetterFork"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lepší vidlice"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:id="@+id/cbBetterSeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="lepší sedlo"
        android:textSize="16sp"
        android:layout_marginBottom="10dp" />

    <CheckBox
        android:id="@+id/cbCarbonFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="karbonová řidítka"
        android:textSize="16sp"
        android:layout_marginBottom="30dp" />

    <!-- Tlačítko Objednat -->
    <Button
        android:id="@+id/btnOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OBJEDNAT KOLO"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="30dp" />

    <!-- Souhrn objednávky nadpis -->
    <TextView
        android:id="@+id/tvSummaryTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Souhrn objednávky:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="20dp" />

    <!-- Obrázek kola -->
    <ImageView
        android:id="@+id/ivBike"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:contentDescription="Obrázek kola"
        android:layout_marginBottom="10dp" />

</LinearLayout>